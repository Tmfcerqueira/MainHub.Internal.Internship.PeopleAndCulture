{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "FeatureManagement": {
    "AbsentManagementApi": true,
    "AbsentManagementApi_Get": true,
    "AbsentManagementApi_Put": true,
    "AbsentManagementApi_Post": true,
    "AbsentManagementApi_Delete": true,
    "AbsentManagementApi_Index": true
  },
  "Serilog": {
    "Using": [
      "Serilog",
      "Serilog.Enrichers.Environment",
      "Serilog.Enrichers.Process",
      "Serilog.Enrichers.CorrelationId",
      "Serilog.Sinks.File",
      "Serilog.Sinks.Async",
      "Serilog.Exceptions"
    ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithProcessId",
      "WithHttpRequestTraceId",
      "WithHttpRequestId",
      "WithCorrelationId"
    ],
    "Properties": {
      "ApplicationName": "Extented.WebApi"
    },
    "WriteTo": [
      {
        "Name": "Async",
        "Args": {
          "configure": [
            {
              "Name": "RFile",
              "Args": {
                "path": "App_Data/Logs/AbsentManagementApi-.log",
                "rollingInterval": "Day",
                "fileSizeLimitBytes": 10485760,
                "retainedFileCountLimit": 20,
                "rollOnFileSizeLimit": "true",
                "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.ffffff zzz} {MachineName} [{AppVersion}] [{CorrelationId}] [{Level:u3}] {ProcessId}, [{RequestId}] {SourceContext} : {Message} Scope:{Scope}{NewLine}{Exception}"
              }
            },
            {
              "Name": "File",
              "Args": {
                "path": "App_Data/Logs/AbsentManagementApi-.json",
                "rollingInterval": "Day",
                "fileSizeLimitBytes": 10485760,
                "retainedFileCountLimit": 20,
                "rollOnFileSizeLimit": "true",
                "formatter": "Serilog.Formatting.Compact.RenderedCompactJsonFormatter, Serilog.Formatting.Compact"
              }
            }
          ]
        }
      }
    ]
  }
}

